<ul>
  <% @ingredients.first(10).each do |genre| %>
    <li><%= genre %></li>
  <% end %>
</ul>

  <div class="container-form-post-search">
    <div class="form-left">
      <%= form_tag shaker_path(user_id: params[:user_id]), method: :post, autocomplete: "off" do %>
        <% @ingredients.first(10).each do |genre| %>
          <label>
            <%= check_box_tag 'ingredients[]',
                              genre,
                              class: "form-control",
                              checked: 'false'
            %>
            <%= genre %>
          </label>
        <% end %>
    </div>
      <div class="form-right">
      <%= submit_tag "Search", class: "btn yellow-button" %>
    <% end %>
    </div>
  </div>
</div>
