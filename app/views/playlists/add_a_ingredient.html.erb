<div class="container-right-part">


  <div class="card-bg">
    <div class="form-home">
      <h2>Add some ingredients to your shaker</h2>
      <div class="forms-style">
        <div class="submit-form">
          <%= form_tag shaker_path(user_id: params[:user_id]), method: :post, autocomplete: "off", :class => 'container-form-ingredient' do %>
            <div class="ingredients">
              <% @ingredients.first(10).each do |genre| %>
                <label class='ingredient'>
                  <%= check_box_tag 'ingredients[]',
                                    genre,
                                    class: "form-control"
                  %>
                  <%= genre.capitalize %>
                </label>
              <% end %>
              <%= submit_tag "Add your ingredients", class: "btn yellow-button-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>



</div>
