<h1>Looking for a specific tune?</h1>
<div class="container-form-post-search">
  <div class="form-left">
    <%= form_tag search_path, method: :get do %>
      <%= text_field_tag :query,
                          params[:query],
                          class: "form-control",
                          placeholder: "Artist or title"
      %>
    </div>
    <div class="form-right">
  <%= submit_tag "Search", class: "btn yellow-button" %>
  <% end %>
    </div>
</div>
<br><br>
<div class="results">
  <% if params[:query].present? %>
    <h1 class="page-header">Tracks Matching whith "<%= params[:query] %>"</h1>
    <% @tracks.each do |track| %>
      <div class="card-result-search">
        <div class="home-post-card-infos">
          <div class="home-post-card-content-top">
            <div class="home-post-card-cover">
              <%= image_tag(track.album.images.first["url"]) %>
            </div>
            <div class="home-post-card-title-artist">
              <h2><%= track.name %></h2>
              <h4><%= track.artists[0].name %></h4>
              <p><%= track.duration_ms %></p>
            </div>
            <div class="search-card-action">
              <i class="fas fa-plus"></i>
            </div>
            <div class="search-card-action">
              <i class="fas fa-share"></i>
            </div>
            <div class="post-card-play" data-action='click->player#sendtrack' data-track-id='spotify:track:<%= track.id %>'>
              <i class="far fa-play-circle"></i>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
