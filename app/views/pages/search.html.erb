<div class="container-login">
  <div class="container-page-login">

    <h1>search page</h1>

    <%= form_tag search_path, method: :get do %>
      <%= text_field_tag :query,
                         params[:query],
                         class: "form-control",
                         placeholder: "Find a music"
      %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

    <% if params[:query].present? %>
      <h1 class="page-header">Tracks Matching whith "<%= params[:query] %>"</h1>
      <% @tracks.each do |track| %>
        <li data-action='click->player#sendtrack' data-track-id='<%= track.id %>'><%= track.name %> | <%= track.artists[0].name %> | <%= track.duration_ms %></li>
      <% end %>
    <% end %>
  </div>
</div>
