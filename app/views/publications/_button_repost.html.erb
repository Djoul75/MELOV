<!-- Modal trigger -->
<i class="fas fa-share col-md-1" data-bs-toggle="modal" data-bs-target="#sharePost"></i>
<!-- Modal -->
<div class="modal fade" id="sharePost" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add to a playlist</h5>
      </div>
      <div class="modal-body">
        <%= simple_form_for @publication do |f| %>
          <%= f.error_notification %>
          <%= f.input :content, as: :text, required: true %>
          <%= f.submit class: 'btn submit-button'%>
          <%= f.hidden_field :track_id, value: track_id %>
          <% raise %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
