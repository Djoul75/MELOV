<!-- Modal -->
<% @publication = Publication.new %>
<div class="modal fade" id="sharePost<%=track_id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Share with your community</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <% track = Song.find_by(spotify_track_id: track_id) %>
        <%= simple_form_for @publication do |f| %>
          <%= f.error_notification %>
          <%= f.input :content, as: :text, required: true, label: false %>
          <%= f.hidden_field :spotify_url, value: track_id %>
          <%= f.submit class: 'yellow-button', name: 'share', value: 'Share' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
