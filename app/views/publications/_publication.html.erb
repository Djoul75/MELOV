<div class="card-bg col-md-12">
    <div class="post-card-music">
        <%= link_to user_path(publication.user) do %>
      <div class="card-avatar-nickname row col-md-12">
          <% if publication.user.photo.attached? %>
            <%= cl_image_tag publication.user.photo.key, crop: :fill, class: 'col-2 col-md-1' %>
          <% else %>
            <%= image_tag 'avatardefaut.jpg', class: 'col-2 col-md-1' %>
          <% end %>
          <h4 class='col-10 col-md-5'><%= publication.user.nickname %></h4>
      </div>
        <% end %>
        <div class="card-content-song row col-sm-12 col-md-12">
          <div class="card-cover col-sm-12 col-md-3 ">
            <%= image_tag(publication.track.album.images.first["url"]) %>
          </div>
          <div class="card-title-artist col-sm-12 col-md-8 ">
            <h2><%= publication.track.name %></h2>
            <h4><%= publication.track.artists[0].name %></h4>
            <p><%= "#{(publication.track.duration_ms / 60_000)}:#{(publication.track.duration_ms / 1_000 % 60)}"%></p>
          </div>
          <div
            class="card-play col-sm-12 col-md-1 "
            data-action='click->player#sendtrack'
            data-track-id='spotify:track:<%= publication.spotify_url %>'
          >
            <i class="far fa-play-circle"></i>
          </div>
        </div>
      <div class="card-content col-md-12">
        <p><%= publication.content %></p>
      </div>
      <div class="post-card-interraction row col-sm-12 col-md-4">
        <i class="fas fa-heart col-md-1"></i>
        <i class="fas fa-comment col-md-1"></i>
        <i class="fas fa-share col-md-1"></i>
        <%= render 'publications/button_add', track_id: publication.track.id %>
      </div>
    </div>
</div>
